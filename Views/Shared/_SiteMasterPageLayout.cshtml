<body>
    <form id="form1" runat="server">
        <div>
            <div id="colorlib-page">
                <a href="#" class="js-colorlib-nav-toggle colorlib-nav-toggle"><i></i></a>
                <aside id="colorlib-aside" role="complementary" class="js-fullheight">
                    <h1 id="colorlib-logo"><a href="/Anasayfa/Index">Mega Zİndeyİz</a></h1>

                    <h5>Merhaba Sayın kullanici</h5>
                    <nav id="colorlib-main-menu" role="navigation">
                        <ul>
                            <li><a>@Html.ActionLink("Anasayfa", "Index", "Anasayfa")</a></li>
                            @foreach (var item in Model.csKategoriler)
                            {
                                <li><a href="/Anasayfa/KategoriOnizleme/@item.kategori_id">@item.kategori</a></li>
                            }
                        </ul>
                    </nav>
                    <div>
                        <div>
                            <marquee scrollamount="2" scrolldelay="60" direction="up" loop="99999" width="200" height="100" onmouseout="this.start()" onmouseover="this.stop()">
