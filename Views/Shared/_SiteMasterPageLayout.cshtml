                        <ul>
                            <li><a href="https://tr-tr.facebook.com/"><i class="icon-facebook2"></i></a></li>
                            <li><a href="https://twitter.com/login?lang=tr"><i class="icon-twitter2"></i></a></li>
                            <li><a href="https://www.instagram.com/"><i class="icon-instagram"></i></a></li>
                            <li><a href="https://tr.linkedin.com/"><i class="icon-linkedin2"></i></a></li>
                        </ul>
                    </div>

                </aside>
            </div>

            <div>
                @RenderBody()
                <!-- jQuery -->
                <script src="~/araclar/js/jquery.min.js"></script>
                <!-- jQuery Easing -->
                <script src="~/araclar/js/jquery.easing.1.3.js"></script>
