                                {
                                    <a href="~/Anasayfa/DuyuruGetir/@duyuru.duyuru_id")>@duyuru.baslik<br /><br /></a>
                                }
                            </marquee>
                        </div>
                        <table class="auto-style1">
                            <tr>
                                <td>&nbsp;</td>
                            </tr>
                        </table>
                    </div>

